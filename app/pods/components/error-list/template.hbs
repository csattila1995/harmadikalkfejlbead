<table class="table table-striped table-hover " id="errorTable">
    <thead>
        <tr>
            <th>Felvétel időpontja</th>
            
            <th>Műfaj</th>
            
            <th>Filmcím</th>
            
            <th>Műveletek</th>
        </tr>   
    </thead>
    <tbody>
        {{#each errors}}
        <tr>
            <td>{{date}}</td>
            <td>{{location}}</td>
            <td><span class="badge">{{numberOfMessages}}</span> {{description}}</td>
            <td>
                {{link-to "Megtekintés" "errors.view" this class="btn btn-default btn-sm"}}
                {{link-to "Módosítás" "errors.edit" this class="btn btn-warning btn-sm"}}
                <button {{action "deleteError" this}} class="btn btn-danger btn-sm">Eltávolítás</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
